<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="searchViewStyle">@style/SearchView</item>
        <item name="colorAccent">#388E3C</item>
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="colorPrimaryDark">#1B5E20</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Dark"></style>
    <style name="Popup" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:maxWidth">9999dp</item>
    </style>

    <style name="RootView">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?colorAccent</item>
        <item name="fabSize">normal</item>
    </style>

</resources>
